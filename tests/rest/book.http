### Testing to get the list of all books

GET http://localhost:3000/books

> {%
client.test(
    "Testing to get the list of all books",
    function() {
        client.assert(response.status === 200, "Response status is not 200");
    }
);
%}

###Testing to get a book with isbn 9789027439642

GET http://localhost:3000/books/
Content-Type: application/json

> {%
client.test(
    "Testing to get book with isbn 9789027439642",
    function() {
        var isbn = 9789027439642;
        var response = client.get("http://localhost:3000/books/" + isbn);
        client.assert(response.status === 200, "There is no book with provided ISBN.");
    }
);
%}

###Testing to get a book with isbn 9789027439643 (BAD WEATHER)

GET http://localhost:3000/books/
Content-Type: application/json

> {%
client.test(
    "Testing to get book with isbn 9789027439643 (BAD WEATHER)",
    function() {
        var isbn = 9789027439642;
        var response = client.get("http://localhost:3000/books/" + isbn);
        client.assert(response.status === 404, "There is no book with provided ISBN.");
    }
);
%}

### Testing to post a new book

POST http://localhost:3000/books
Content-Type: application/json

{
  "isbn": "9789027439642",
  "title": "Rework",
  "author": "Jason Fried",
  "numberOfPages": 279,
  "language": "English",
  "publisher": "Random House UK Ltd",
  "releaseDate": "2010-05-01",
  "startTime": "2023-09-01",
  "endTime": "2023-10-01"
}

> {%
client.test(
    "Testing to post a new book",
    function() {
        client.assert(response.status === 201, "Response status is not 201");
        client.assert(response.body.title === "Rework", "Book title in the response does not match the expected title");
    }
);
%}